void fragmnet() {
	uniform texture frame1;
	uniform texture frame2;
	uniform texture frame3;
	uniform texture frame4;
	float frames = 4.0;
	float frameLength = 0.2;
	
	float time = fract(TIME/(frames*frameLength))*frames;
	color col;
	
	if (time < 1) {
		col = tex(frame1, UV);
	} else{ 
		if (time < 2) {
			col = tex(frame2, UV);
		} else{ 
			if (time < 3) {
				col = tex(frame3, UV);
			} else{ 
				if (time < 4) {
					col = tex(frame4, UV);
				}
			}
		}
	}
	
	COLOR = col;
}"
